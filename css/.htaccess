###########################################
# Tell Apache to have PHP parse all 
# CSS files in this directory 
###########################################

AddType application/x-httpd-php .css

###########################################
# Turn on symlinks
###########################################

Options +FollowSymLinks

###########################################
## Allow directory index
###########################################

Options +Indexes

###########################################
## Check for mod_rewrite module
###########################################

<IfModule mod_rewrite.c>

	###########################################
	## Turn rewrite engine on
	###########################################
	
	RewriteEngine On

	###########################################
	## Set the rewrite base URL
	###########################################
	
	RewriteBase /css

	###########################################
	# Rewrite the CSS file URL to a URL with a
	# querystring for PHP
	# Example:	grid-numberOfColumns-columnWidth-gutterWidth.css
	# URL IN: 	grid-10-180-12.css
	# URL OUT:	grid.css?columns=10&grid_1=180&gutter=12
	###########################################
	
	RewriteRule ^grid-([0-9]+)-([0-9]+)-([0-9]+)\.css$ grid.css?columns=$1&grid_1=$2&gutter=$3

</IfModule>